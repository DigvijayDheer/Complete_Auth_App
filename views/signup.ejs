<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Complete Authentication System</title>
    <link rel="stylesheet" href="assets/bootstrap.min.css" />
    <link rel="stylesheet" href="assets/style.css" />
  </head>
  <body>
    <div class="overlay">
      <!-- Navigation bar -->
      <nav class="navbar navbar-expand-lg bg-primary mb-3" data-bs-theme="dark">
        <div class="container">
          <a class="navbar-brand" href="/">Authentication App</a>
        </div>
      </nav>

      <main class="container">
        <div class="card border-secondary mb-3 mx-auto">
          <div class="card-header text-center">
            <h4 class="card-title">Create your account</h4>
          </div>
          <div class="card-body">
            <% if(typeof err != "undefined") { %>
            <!-- Display error message -->
            <div class="alert alert-dismissible alert-danger">
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="alert"
              ></button>
              <%= err%>
            </div>
            <% } %>

            <!-- Registration form -->
            <form action="/signup" method="post">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <div class="form-group">
                <div class="form-floating mb-3">
                  <input
                    name="username"
                    type="text"
                    class="form-control"
                    id="username"
                    placeholder="Enter username"
                  />
                  <label for="username">User Name</label>
                </div>
              </div>
              <div class="form-group">
                <div class="form-floating mb-3">
                  <input
                    name="email"
                    type="text"
                    class="form-control"
                    id="email"
                    placeholder="Enter email address"
                  />
                  <label for="email">Email Address</label>
                </div>
              </div>
              <div class="form-group">
                <div class="form-floating mb-3">
                  <input
                    name="password"
                    type="password"
                    class="form-control"
                    id="password"
                    placeholder="Enter Password"
                  />
                  <label for="password">Password</label>
                </div>
              </div>
              <div class="form-group">
                <div class="form-floating mb-3">
                  <input
                    name="confirmPassword"
                    type="password"
                    class="form-control"
                    id="confirmPassword"
                    placeholder="Confirm Password"
                  />
                  <label for="confirmPassword">Confirm Password</label>
                </div>
              </div>
              <div class="d-grid gap-2 mt-3">
                <!-- Sign Up button -->
                <button class="btn btn-lg btn-outline-primary" type="submit">
                  Sign Up
                </button>
                <!-- Google Sign Up button -->
                <!-- <a class="btn btn-lg btn-outline-primary" href="/google">
                  <img
                    src="./assets/google_g_icon.png"
                    style="width: 2rem"
                  />Google
                </a> -->
              </div>
            </form>

            <p class="mt-3 text-center">
              Have an account? <a href="/login">Log in now</a>
            </p>
          </div>
        </div>
      </main>
    </div>

    <!-- Bootstrap scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"
      integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
