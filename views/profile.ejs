<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Complete Authentication System</title>
    <link rel="stylesheet" href="assets/bootstrap.min.css" />
    <link rel="stylesheet" href="assets/style.css" />
  </head>
  <style></style>
  <body>
    <div class="overlay">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
        <div class="container">
          <a class="navbar-brand" href="/">Authentication App</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarColor01"
            aria-controls="navbarColor01"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link" href="/logout">Log Out</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

      <main class="container">
        <% if (typeof verified !== "undefined" && !verified) { %>
        <!-- Display verification message -->
        <div class="alert alert-dismissible alert-danger text-center mt-2">
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
          ></button>
          Please verify your account
          <a href="/send-verification-email">Send verification email</a>
        </div>
        <% } %>

        <!--  -->

        <% if (typeof emailSent !== "undefined" && emailSent) { %>
        <!-- Display success message for sent verification email -->
        <div class="alert alert-dismissible alert-success text-center mt-2">
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
          ></button>
          Verification email sent successfully!
        </div>
        <% } %>

        <!--  -->

        <% if (typeof err !== "undefined" && err) { %>
        <!-- Display error message -->
        <div class="alert alert-dismissible alert-danger text-center mt-2">
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
          ></button>
          <%= err%>
        </div>
        <% } %>

        <h1 class="text-center mt-5 mb-3 text-primary">
          Hello <%= username %>
        </h1>
        <p class="text-center text-info">Welcome to your profile page.</p>
      </main>
    </div>
    <!-- Bootstrap scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"
      integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
